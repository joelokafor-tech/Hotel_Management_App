<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <input type="text" name="performedBy" class="form-control"
               placeholder="Performed By"
               value="@ViewData["PerformedBy"]" />
    </div>

    <div class="col-md-2">
        <select name="actionType" class="form-select">
            <option value="">-- Action Type --</option>
            @foreach (var action in (List<string>)ViewData["ActionTypes"])
            {
                <option value="@action" selected="@(ViewData["ActionType"]?.ToString() == action)">
                    @action
                </option>
            }
        </select>
    </div>

    <div class="col-md-2">
        <input type="date" name="startDate" class="form-control"
               value="@ViewData["StartDate"]" />
    </div>

    <div class="col-md-2">
        <input type="date" name="endDate" class="form-control"
               value="@ViewData["EndDate"]" />
    </div>

    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>Action</th>
            <th>Performed By</th>
            <th>Affected User</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var log in Model)
    {
        <tr>
            <td>@log.Timestamp.ToLocalTime()</td>
            <td>@log.Action</td>
            <td>@log.PerformedBy</td>
            <td>@log.AffectedUser</td>
            <td>@log.Details</td>
        </tr>
    }
    </tbody>
</table>
