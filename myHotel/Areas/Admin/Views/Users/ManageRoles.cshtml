@model myHotel.Areas.Admin.ViewModels.ManageRolesViewModel
@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Roles for @Model.FullName</h2>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <strong>Assign Roles:</strong>
        <div class="form-check">
            @foreach (var role in Model.AvailableRoles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           name="SelectedRoles"
                           value="@role"
                           @(Model.AssignedRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
